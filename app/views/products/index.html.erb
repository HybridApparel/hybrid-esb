<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Styleident</th>
      <th>Product name</th>
      <th>Product description</th>
      <th>Product thumb url</th>
      <th>Product preview url</th>
      <th>Product print url</th>
      <th>Trim codes</th>
      <th>Necklabel</th>
      <th>Hangtag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.styleident %></td>
        <td><%= product.product_name %></td>
        <td><%= product.product_description %></td>
        <td><%= product.product_thumb_url %></td>
        <td><%= product.product_preview_url %></td>
        <td><%= product.product_print_url %></td>
        <td><%= product.trim_codes %></td>
        <td><%= product.necklabel_id %></td>
        <td><%= product.hangtag_id %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

